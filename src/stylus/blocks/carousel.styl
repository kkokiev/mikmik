.carousel

	&__title
		padding-top 16px
		padding-bottom 13px
		font-size 24px
		text-align center

	&__body
		background light

	&__wrap
		position relative
		padding-x(78px)

		+below(smallest)
			padding-x(30px)

		.owl-prev,
		.owl-next
			position absolute
			top 0
			bottom 0
			margin-y(auto)
			display block
			height 76px
			width 41px
			text-indent 100%
			white-space nowrap
			overflow hidden
			cursor pointer

			+below(smallest)
				height 38px
				width 20px

			&:hover,
			&:focus
				opacity-light()

		.owl-next
			left 0
			background transparent url(images/static/left.png) 0 0 no-repeat
			background-size cover

		.owl-prev
			right 0
			background transparent url(images/static/right.png) 0 0 no-repeat
			background-size cover

	.owl-carousel .owl-stage-outer
		padding-top 15px

	//styles for single item
	.item
		text-align center
		overflow hidden

	&__item
		display inline-block
		width 100%
		max-width 206px
		border-bottom 3px solid brand-light-2

	&__item-img-wrap
		display table
		width 100%
		text-align center

		&:hover,
		&:focus
			opacity-light()

	&__item-img-inner-wrap
		display table-cell
		height 176px
		vertical-align middle

	&__item-img
		display inline-block !important
		max-height 100%
		width auto !important
		max-width 100%


	&__btn-wrap
		margin-bottom 15px
		padding-x(7px)

	&__btn
		display inline-block
		width 100%
		padding-y(9px)
		padding-x(10px)
		color light
		font-size 15px
		text-decoration none
		background btn
		border-radius(7px)
		white-space nowrap
		overflow hidden
		text-overflow ellipsis


		&:hover,
		&:focus
			background brand-dark
