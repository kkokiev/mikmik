.footer-links
	padding-top 11px
	padding-bottom 50px
	clearfix()

	+below(medium)
		padding-top 40px

	&__item
		float right
		width 16.66%
		padding-left 10px

		+below(medium)
			width 50%
			margin-bottom 30px
			text-align center

			&:nth-child(2n+3)
				clear both

		+below(smallest)
			width 100%

	&__title
		margin-bottom 24px
		color brand-dark
		font-size 24px
		line-height 28px

		&_empty
			+below(smallest)
				height 0
				margin-top -30px
				margin-bottom 0

		a
			color brand-dark
			text-decoration none

			&:hover,
			&:focus
				text-decoration underline

	&__list

		a
			color main
			font-size 14px
			line-height 30px
			text-decoration none

			&:hover,
			&:focus
				text-decoration underline

