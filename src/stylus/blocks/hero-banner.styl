.b-hero-banner
	padding-top 20px
	padding-left 45%
	padding-bottom 46px
	color brand-dark
	bg-image()

	+below(tablet)
		padding-left 30%

	+below(mobile)
		padding-x (15px)

	&__info-wrap
		text-align center

	&__title
		font-size 58px
		line-height 56px

		+below(mobile)
			font-size 46px
			line-height 46px

		+below(smallest)
			font-size 38px
			line-height 38px

	&__text
		max-width 520px
		margin-x(auto)
		margin-bottom 13px
		padding-x(10px)
		font-size 12px
		line-height 14px

		+below(mobile)
			padding-x(0)
			font-size 14px
			line-height 15px

	&__subtitle
		margin-bottom 31px
		font-size 36px
		line-height 36px

		+below(smallest)
			font-size 32px
			line-height 32px

	&__btn
		display inline-block
		padding-top 20px
		padding-x(100px)
		padding-bottom 9px
		color brand-dark
		font-family font-bold
		font-size 48px
		line-height 48px
		text-decoration none
		background brand-light-3
		box-shadow 7px 6px 0 0 #7e8080

		+below(mobile)
			padding-x(60px)

		+below(smallest)
			font-size 38px
			line-height 38px

		&:hover,
		&:focus
			background brand-light-1

